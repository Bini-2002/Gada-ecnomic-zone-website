# Copy to .env and fill secrets
SECRET_KEY=change_me_generate_long_random_string
# AUTO_CREATE=0  # uncomment to disable automatic table creation after migrations are stable

# SMTP settings for sending verification codes
# Fill these to enable email sending; otherwise the server logs a warning and skips email.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@example.com
